<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/privacy_settings_title" android:key="privacy_settings_screen" settings:searchable="false"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:key="somc_backup_category">
        <com.sonymobile.settings.backup.BackupCardPreference android:selectable="false" android:key="somc_backup_card" />
        <Preference android:icon="@drawable/ic_settings_somc_autobackup" android:persistent="false" android:title="@string/somc_automatic_backup_title" android:key="somc_automatic_backup" settings:controller="com.android.settings.system.PrivacySettingsPreferenceController" />
        <Preference android:icon="@drawable/ic_settings_somc_restore" android:persistent="false" android:title="@string/somc_restore_data_title" android:key="somc_restore_data" settings:controller="com.android.settings.system.PrivacySettingsPreferenceController" />
        <Preference android:icon="@drawable/ic_settings_somc_more" android:persistent="false" android:title="@string/somc_backup_more_title" android:key="somc_backup_more" settings:controller="com.android.settings.system.PrivacySettingsPreferenceController" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/backup_section_title" android:key="backup_category" settings:searchable="false">
        <Preference android:persistent="false" android:title="@string/backup_data_title" android:key="backup_data" android:fragment="com.android.settings.backup.ToggleBackupSettingFragment" settings:controller="com.android.settings.backup.BackupDataPreferenceController" />
        <Preference android:persistent="false" android:title="@string/backup_configure_account_title" android:key="configure_account" settings:controller="com.android.settings.backup.ConfigureAccountPreferenceController">
            <intent android:action="dummy" />
        </Preference>
        <Preference android:title="@string/backup_data_management_title" android:key="data_management" settings:controller="com.android.settings.backup.DataManagementPreferenceController" />
        <SwitchPreference android:title="@string/auto_restore_title" android:key="auto_restore" android:summary="@string/auto_restore_summary" settings:controller="com.android.settings.backup.AutoRestorePreferenceController" />
        <Preference android:enabled="false" android:title="@string/disabled_by_administrator_summary" android:selectable="false" android:key="backup_inactive" settings:controller="com.android.settings.backup.BackupInactivePreferenceController" />
    </PreferenceCategory>
</PreferenceScreen>